@model System.Collections.Generic.IEnumerable<cms_prov.Models.ItemModel>
@*@model PagedList.IPagedList<cms_prov.Models.ItemModel>
@using PagedList.Mvc;*@
@*<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />*@
@{
    ViewBag.Title = "Sort";
}

<h2>Sort</h2>
@using (Html.BeginForm(/*"Sort", "productxImg", FormMethod.Get*/))
{
    <p>
        Busca: @Html.TextBox("SearchString"/*, ViewBag.CurrentFilter as string*/)
        <input type="submit" value="Search" />
    </p>

    <p>
        Categoría : @Html.DropDownList("SelectedCategory", "ALL")
        <input type="submit" value="Filter " />
    </p>
}
<table>
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>


        <th>
            @*@Html.DisplayNameFor(model => model.Description)*@
            @Html.ActionLink("Description", "Sort", new { sortOrder = ViewBag.NameSortParm/*, currentFilter = ViewBag.CurrentFilter */})
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Categorias)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Imagen)
        </th>
    </tr>
    <tr>
        @foreach (var item in Model)
        {
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categorias)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.Imagen)*@
                <img src="data:image/png;base64,@Convert.ToBase64String(item.Imagen, 0, item.Imagen.Length)" width="100" />

            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id })
            </td>
        }
    </tr>

</table>
<br />
